@model SiakWebApps.Models.Expense

<form asp-action="Edit" id="editExpenseForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedAt" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="NamaPengeluaran" class="control-label">Expense Name</label>
                <input asp-for="NamaPengeluaran" class="form-control" />
                <span asp-validation-for="NamaPengeluaran" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jumlah" class="control-label"></label>
                <input asp-for="Jumlah" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalPengeluaran" class="control-label">Date</label>
                <input asp-for="TanggalPengeluaran" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="TanggalPengeluaran" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="AnggaranId" class="control-label">Budget Category</label>
                <select asp-for="AnggaranId" class="form-control" asp-items="ViewBag.AnggaranId">
                    <option value="">-- Select Category --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TahunAjaranId" class="control-label">Academic Year</label>
                <select asp-for="TahunAjaranId" class="form-control" asp-items="ViewBag.TahunAjaranId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
                    <option value="">-- Select Semester --</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Deskripsi" class="control-label"></label>
        <textarea asp-for="Deskripsi" class="form-control" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="BuktiPengeluaran" class="control-label">Receipt File Name / URL</label>
        <input asp-for="BuktiPengeluaran" class="form-control" />
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update Expense</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
