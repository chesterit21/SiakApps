@model SiakWebApps.Models.Semester

<form asp-action="Create" id="createSemesterForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TahunAjaranId" class="control-label">Academic Year</label>
        <select asp-for="TahunAjaranId" class="form-control" asp-items="ViewBag.TahunAjaranId"></select>
        <span asp-validation-for="TahunAjaranId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SemesterKe" class="control-label">Semester Number</label>
        <input asp-for="SemesterKe" class="form-control" />
        <span asp-validation-for="SemesterKe" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TanggalMulai" class="control-label">Start Date</label>
                <input asp-for="TanggalMulai" type="date" class="form-control" />
                <span asp-validation-for="TanggalMulai" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TanggalSelesai" class="control-label">End Date</label>
                <input asp-for="TanggalSelesai" type="date" class="form-control" />
                <span asp-validation-for="TanggalSelesai" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
        </label>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Semester</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
