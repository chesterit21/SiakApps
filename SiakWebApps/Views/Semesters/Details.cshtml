@model SiakWebApps.Models.Semester
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-sm borderless">
            <tr>
                <th style="width: 30%">Semester Name</th>
                <td>: @Model.Nama</td>
            </tr>
            <tr>
                <th>Semester No</th>
                <td>: @Model.SemesterKe</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>: @Model.TanggalMulai.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>: @Model.TanggalSelesai.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>: @(Model.IsActive ? "Yes" : "No")</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>: @Model.CreatedAt.ToString("g")</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>: @Model.UpdatedAt.ToString("g")</td>
            </tr>
        </table>
    </div>
</div>
<div class="modal-footer px-0 pb-0 mt-3 shadow-none border-top-0">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
