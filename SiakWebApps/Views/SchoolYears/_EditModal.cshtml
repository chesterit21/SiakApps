@model SiakWebApps.Models.SchoolYear

<form asp-action="Edit" id="editSchoolYearForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nama" class="control-label">School Year Name</label>
        <input asp-for="Nama" class="form-control" placeholder="e.g. 2024/2025" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TahunMulai" class="control-label">Start Year</label>
                <input asp-for="TahunMulai" class="form-control" type="number" />
                <span asp-validation-for="TahunMulai" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TahunSelesai" class="control-label">End Year</label>
                <input asp-for="TahunSelesai" class="form-control" type="number" />
                <span asp-validation-for="TahunSelesai" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsActive" /> Is Active?
        </label>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update School Year</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
