@model IEnumerable<SiakWebApps.Models.SchoolYear>

@{
    ViewData["Title"] = "School Years";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>School Years</h1>
    <button type="button" class="btn btn-primary" onclick="openCreateModal()">
        <i class="fas fa-plus"></i> Add School Year
    </button>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="schoolYearsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start Year</th>
                        <th>End Year</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nama</td>
                            <td>@item.TahunMulai</td>
                            <td>@item.TahunSelesai</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-info btn-sm" onclick="openDetailsModal(@item.Id)">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-warning btn-sm" onclick="openEditModal(@item.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="crudModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#schoolYearsTable').DataTable();
        });

        function openCreateModal() {
            $('#modalTitle').text('Add School Year');
            $('#modalBody').load('/SchoolYears/Create', function () {
                $('#crudModal').modal('show');
            });
        }

        function openEditModal(id) {
            $('#modalTitle').text('Edit School Year');
            $('#modalBody').load('/SchoolYears/Edit/' + id, function () {
                $('#crudModal').modal('show');
            });
        }

        function openDetailsModal(id) {
            $('#modalTitle').text('School Year Details');
            $('#modalBody').load('/SchoolYears/Details/' + id, function () {
                $('#crudModal').modal('show');
            });
        }

        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this school year?')) {
                $.ajax({
                    url: '/SchoolYears/Delete/' + id,
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error deleting school year.');
                        }
                    }
                });
            }
        }

        $(document).on('submit', '#createSchoolYearForm, #editSchoolYearForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#crudModal').modal('hide');
                        location.reload();
                    } else {
                        $('#modalBody').html(response);
                    }
                }
            });
        });
    </script>
}
