@model IEnumerable<SiakWebApps.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Subjects</h1>
    <button type="button" class="btn btn-primary" onclick="openCreateModal()">
        <i class="fas fa-plus"></i> Add Subject
    </button>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="subjectsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Level Range</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Kode</td>
                            <td>@item.Nama</td>
                            <td>@item.TingkatMin - @item.TingkatMax</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-info btn-sm" onclick="openDetailsModal(@item.Id)">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-warning btn-sm" onclick="openEditModal(@item.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal placeholders -->
<div class="modal fade" id="crudModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Modal Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
        </div>
    </div>
</div>

<!-- Temporary token input for AJAX requests -->
<input type="hidden" id="requestVerificationToken" value="@Html.AntiForgeryToken()" />

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#subjectsTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                responsive: true,
                language: {
                    paginate: {
                        next: '&raquo;',
                        previous: '&laquo;'
                    },
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries"
                },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50]
            });
        });

        function openCreateModal() {
            $('#modalTitle').text('Add Subject');
            $('#modalBody').load('/Subjects/Create', function () {
                $('#crudModal').modal('show');
            });
        }

        function openEditModal(id) {
            $('#modalTitle').text('Edit Subject');
            $('#modalBody').load('/Subjects/Edit/' + id, function () {
                $('#crudModal').modal('show');
            });
        }

        function openDetailsModal(id) {
            $('#modalTitle').text('Subject Details');
            $('#modalBody').load('/Subjects/Details/' + id, function () {
                $('#crudModal').modal('show');
            });
        }

        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this subject?')) {
                $.ajax({
                    url: '/Subjects/Delete/' + id,
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error deleting subject.');
                        }
                    }
                });
            }
        }

        $(document).on('submit', '#createSubjectForm, #editSubjectForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                type: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#crudModal').modal('hide');
                        location.reload();
                    } else {
                        $('#modalBody').html(response);
                    }
                }
            });
        });
    </script>
}