@model SiakWebApps.Models.Subject

<form asp-action="Create" id="createSubjectForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Kode" class="control-label"></label>
        <input asp-for="Kode" class="form-control" />
        <span asp-validation-for="Kode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TingkatMin" class="control-label">Min Level</label>
                <input asp-for="TingkatMin" class="form-control" />
                <span asp-validation-for="TingkatMin" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TingkatMax" class="control-label">Max Level</label>
                <input asp-for="TingkatMax" class="form-control" />
                <span asp-validation-for="TingkatMax" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Deskripsi" class="control-label"></label>
        <textarea asp-for="Deskripsi" class="form-control"></textarea>
        <span asp-validation-for="Deskripsi" class="text-danger"></span>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Subject</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
