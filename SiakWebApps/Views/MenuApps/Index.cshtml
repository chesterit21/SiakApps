@{
    ViewData["Title"] = "Menu Apps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                            <i class="fas fa-plus"></i> New Menu
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="menuTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Menu Name</th>
                                <th>Unique Code</th>
                                <th>Menu URL</th>
                                <th>Parent Menu</th>
                                <th>Level</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>

@await Html.PartialAsync("_CreateModal")
@await Html.PartialAsync("_EditModal")

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load parent menus for dropdowns
            function loadParentMenus() {
                return $.get('/MenuApps/GetMenuApps')
                    .then(function(response) {
                        var parentMenus = response.data;
                        var options = '<option value="">None</option>';
                        
                        parentMenus.forEach(function(menu) {
                            options += '<option value="' + menu.id + '">' + menu.menuName + '</option>';
                        });
                        
                        $('#parentMenuId').html(options);
                        $('#editParentMenuId').html(options);
                    });
            }
            
            // Load parent menus when page loads
            loadParentMenus().then(function() {
                // Initialize DataTable after parent menus are loaded
                var table = $('#menuTable').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "responsive": true,
                    "ajax": {
                        "url": "/MenuApps/GetMenuApps",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "id" },
                        { "data": "menuName" },
                        { "data": "uniqueCode" },
                        { "data": "menuUrl" },
                        { 
                            "data": "parentMenu", 
                            "render": function(data, type, row) {
                                return data ? data.menuName : 'None';
                            }
                        },
                        { "data": "levelParent" },
                        {
                            "data": "id",
                            "render": function (data, type, row) {
                                return "<button class='btn btn-primary btn-sm edit-btn' data-id='" + data + "'><i class='fas fa-edit'></i> Edit</button> " +
                                       "<button class='btn btn-danger btn-sm delete-btn' data-id='" + data + "'><i class='fas fa-trash'></i> Delete</button>";
                            },
                            "orderable": false,
                            "searchable": false
                        }
                    ]
                });

                // Handle edit button click
                $('#menuTable tbody').on('click', '.edit-btn', function () {
                    var id = $(this).data('id');
                    $.get('/MenuApps/GetById/' + id)
                        .done(function (data) {
                            $('#editId').val(data.id);
                            $('#editMenuName').val(data.menuName);
                            $('#editUniqueCode').val(data.uniqueCode);
                            $('#editMenuUrl').val(data.menuUrl);
                            $('#editParentMenuId').val(data.parentMenuId || '');
                            $('#editIsParent').prop('checked', data.isParent);
                            $('#editLevelParent').val(data.levelParent);
                            
                            $('#editModal').modal('show');
                        })
                        .fail(function () {
                            alert('Error retrieving menu data');
                        });
                });

                // Handle delete button click
                $('#menuTable tbody').on('click', '.delete-btn', function () {
                    var id = $(this).data('id');
                    if (confirm('Are you sure you want to delete this menu?')) {
                        $.ajax({
                            url: '/MenuApps/Delete/' + id,
                            type: 'DELETE',
                            success: function (result) {
                                if (result.success) {
                                    table.ajax.reload();
                                    alert(result.message);
                                } else {
                                    alert(result.message);
                                }
                            },
                            error: function (xhr, status, error) {
                                alert('Error deleting menu: ' + xhr.responseText);
                            }
                        });
                    }
                });

                // Handle form submission for create
                $('#createForm').submit(function (e) {
                    e.preventDefault();
                    
                    $.ajax({
                        url: '/MenuApps/Create',
                        type: 'POST',
                        data: $(this).serialize(),
                        success: function (result) {
                            if (result.success) {
                                $('#createModal').modal('hide');
                                $('#createForm')[0].reset();
                                table.ajax.reload();
                                alert(result.message);
                            } else {
                                alert(result.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            var errorMessage = xhr.responseJSON && xhr.responseJSON.message ? 
                                xhr.responseJSON.message : 
                                'Error creating menu: ' + xhr.responseText;
                            alert(errorMessage);
                        }
                    });
                });

                // Handle form submission for edit
                $('#editForm').submit(function (e) {
                    e.preventDefault();
                    
                    $.ajax({
                        url: '/MenuApps/Edit',
                        type: 'POST',
                        data: $(this).serialize(),
                        success: function (result) {
                            if (result.success) {
                                $('#editModal').modal('hide');
                                table.ajax.reload();
                                alert(result.message);
                            } else {
                                alert(result.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            var errorMessage = xhr.responseJSON && xhr.responseJSON.message ? 
                                xhr.responseJSON.message : 
                                'Error updating menu: ' + xhr.responseText;
                            alert(errorMessage);
                        }
                    });
                });
            });
        });
    </script>
}