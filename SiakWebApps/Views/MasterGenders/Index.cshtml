@model IEnumerable<SiakWebApps.Models.MasterGender>

@{
    ViewData["Title"] = "Master Genders";
}

<h1>Master Genders</h1>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal" onclick="showCreateModal()">
        Create New
    </button>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="gendersTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nama)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="showEditModal(@item.Id)">
                            Edit
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="showDetailsModal(@item.Id)">
                            Details
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteGender(@item.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Gender</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Gender</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Gender Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#gendersTable').DataTable({
                "pageLength": 10,
                "ordering": true,
                "info": true,
                "responsive": true
            });
        });

        function showCreateModal() {
            $.get('/MasterGenders/Create', function (data) {
                $('#createModal .modal-body').html(data);
                $('#createModal').modal('show');
            });
        }

        function showEditModal(id) {
            $.get('/MasterGenders/Edit/' + id, function (data) {
                $('#editModal .modal-body').html(data);
                $('#editModal').modal('show');
            });
        }

        function showDetailsModal(id) {
            $.get('/MasterGenders/Details/' + id, function (data) {
                $('#detailsModal .modal-body').html(data);
                $('#detailsModal').modal('show');
            });
        }

        function deleteGender(id) {
            if (confirm('Are you sure you want to delete this gender?')) {
                $.post('/MasterGenders/Delete', { id: id }, function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting gender: ' + data.message);
                    }
                });
            }
        }

        // Handle form submissions
        $(document).on('submit', '#createGenderForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#createModal').modal('hide');
                        location.reload();
                    } else {
                        // Display validation errors
                        alert('Validation errors occurred.');
                    }
                }
            });
        });

        $(document).on('submit', '#editGenderForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#editModal').modal('hide');
                        location.reload();
                    } else {
                        // Display validation errors
                        alert('Validation errors occurred.');
                    }
                }
            });
        });
    </script>
}