@model SiakWebApps.Models.StudentRegistration
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-6 border-right">
        <h5 class="mb-3 text-primary">Personal Information</h5>
        <table class="table table-sm borderless">
            <tr>
                <th style="width: 40%">Full Name</th>
                <td>: @Model.NamaLengkap</td>
            </tr>
            <tr>
                <th>Gender ID</th>
                <td>: @Model.JenisKelaminId</td>
            </tr>
            <tr>
                <th>POB / DOB</th>
                <td>: @(Model.TempatLahir ?? "-") / @(Model.TanggalLahir?.ToString("dd/MM/yyyy") ?? "-")</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>: @Model.Alamat</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>: @Model.Phone</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>: @(Model.Email ?? "-")</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <h5 class="mb-3 text-primary">Academic & Parent Info</h5>
        <table class="table table-sm borderless">
            <tr>
                <th style="width: 40%">Previous School</th>
                <td>: @(Model.AsalSekolah ?? "-")</td>
            </tr>
            <tr>
                <th>Report Score</th>
                <td>: @(Model.NilaiRaport?.ToString("N2") ?? "-")</td>
            </tr>
            <tr>
                <th>Father's Name</th>
                <td>: @(Model.NamaAyah ?? "-")</td>
            </tr>
            <tr>
                <th>Mother's Name</th>
                <td>: @(Model.NamaIbu ?? "-")</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>: <span
                        class="badge @(Model.Status switch { "Menunggu" => "badge-warning", "Diterima" => "badge-success", "Ditolak" => "badge-danger", _ => "badge-secondary" })">@Model.Status</span>
                </td>
            </tr>
            <tr>
                <th>Reg. Date</th>
                <td>: @Model.TanggalDaftar.ToString("dd/MM/yyyy")</td>
            </tr>
        </table>
    </div>
</div>
<div class="modal-footer px-0 pb-0 mt-3 shadow-none border-top-0">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
