@model SiakWebApps.Models.StudentRegistration

<form asp-action="Create" id="createRegistrationForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <h6 class="text-primary font-weight-bold">Academic Info</h6>
            <div class="form-group">
                <label asp-for="TahunAjaranId" class="control-label">Academic Year</label>
                <select asp-for="TahunAjaranId" class="form-control" asp-items="ViewBag.TahunAjaranId"></select>
                <span asp-validation-for="TahunAjaranId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AsalSekolah" class="control-label">Prev. School</label>
                <input asp-for="AsalSekolah" class="form-control" />
                <span asp-validation-for="AsalSekolah" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NilaiRaport" class="control-label">Report Score</label>
                <input asp-for="NilaiRaport" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="NilaiRaport" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 border-left">
            <h6 class="text-primary font-weight-bold">Personal Info</h6>
            <div class="form-group">
                <label asp-for="NamaLengkap" class="control-label">Full Name</label>
                <input asp-for="NamaLengkap" class="form-control" />
                <span asp-validation-for="NamaLengkap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JenisKelaminId" class="control-label">Gender</label>
                <select asp-for="JenisKelaminId" class="form-control" asp-items="ViewBag.JenisKelaminId"></select>
                <span asp-validation-for="JenisKelaminId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TempatLahir" class="control-label">POB</label>
                        <input asp-for="TempatLahir" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TanggalLahir" class="control-label">DOB</label>
                        <input asp-for="TanggalLahir" type="date" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Alamat" class="control-label"></label>
                <textarea asp-for="Alamat" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 border-left">
            <h6 class="text-primary font-weight-bold">Contact & Parents</h6>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NamaAyah" class="control-label">Father's Name</label>
                <input asp-for="NamaAyah" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NamaIbu" class="control-label">Mother's Name</label>
                <input asp-for="NamaIbu" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Menunggu">Menunggu</option>
                    <option value="Diterima">Diterima</option>
                    <option value="Ditolak">Ditolak</option>
                </select>
            </div>
        </div>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit Registration</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
