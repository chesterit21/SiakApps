@model SiakWebApps.Models.StudentScholarship

<form asp-action="Edit" id="editScholarshipForm">
    <input type="hidden" asp-for="SiswaId" />
    <input type="hidden" asp-for="BeasiswaId" />
    <input type="hidden" asp-for="TahunAjaranId" />
    <input type="hidden" asp-for="SemesterId" />
    <input type="hidden" asp-for="CreatedAt" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                Editing scholarship for Student #@Model.SiswaId in @Model.TahunAjaranId - Semester @Model.SemesterId
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TanggalMulai" class="control-label">Start Date</label>
                <input asp-for="TanggalMulai" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="TanggalMulai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalSelesai" class="control-label">End Date</label>
                <input asp-for="TanggalSelesai" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="TanggalSelesai" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="JumlahBantuan" class="control-label">Amount</label>
                <input asp-for="JumlahBantuan" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="JumlahBantuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Aktif">Aktif</option>
                    <option value="Selesai">Selesai</option>
                    <option value="Dibatalkan">Dibatalkan</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update Scholarship</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
