@model SiakWebApps.Models.StudentScholarship

<form asp-action="Create" id="createScholarshipForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SiswaId" class="control-label">Student</label>
                <select asp-for="SiswaId" class="form-control" asp-items="ViewBag.SiswaId"></select>
                <span asp-validation-for="SiswaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeasiswaId" class="control-label">Scholarship Type</label>
                <select asp-for="BeasiswaId" class="form-control" asp-items="ViewBag.BeasiswaId"></select>
                <span asp-validation-for="BeasiswaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TahunAjaranId" class="control-label">Academic Year</label>
                <select asp-for="TahunAjaranId" class="form-control" asp-items="ViewBag.TahunAjaranId"></select>
                <span asp-validation-for="TahunAjaranId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TanggalMulai" class="control-label">Start Date</label>
                <input asp-for="TanggalMulai" type="date" class="form-control" />
                <span asp-validation-for="TanggalMulai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TanggalSelesai" class="control-label">End Date</label>
                <input asp-for="TanggalSelesai" type="date" class="form-control" />
                <span asp-validation-for="TanggalSelesai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JumlahBantuan" class="control-label">Amount</label>
                <input asp-for="JumlahBantuan" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="JumlahBantuan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Aktif">Aktif</option>
                    <option value="Selesai">Selesai</option>
                    <option value="Dibatalkan">Dibatalkan</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Scholarship</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
