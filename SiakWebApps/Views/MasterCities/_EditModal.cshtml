@model SiakWebApps.Models.MasterCity

<form asp-action="Edit" id="editCityForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />
    <input type="hidden" asp-for="UpdatedAt" />
    <div class="form-group">
        <label asp-for="ProvinsiId" class="control-label">Province</label>
        <select asp-for="ProvinsiId" class="form-control" asp-items="@(ViewData["Provinces"] as SelectList)">
            <option value="">-- Select Province --</option>
        </select>
        <span asp-validation-for="ProvinsiId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}