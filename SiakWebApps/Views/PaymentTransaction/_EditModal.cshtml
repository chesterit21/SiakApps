@model SiakWebApps.Models.PaymentTransaction

<form asp-action="Edit" id="editTransactionForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedAt" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="SiswaId" class="control-label">Student</label>
                <select asp-for="SiswaId" class="form-control" asp-items="ViewBag.SiswaId"></select>
                <span asp-validation-for="SiswaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JenisPembayaran" class="control-label">Payment Type</label>
                <select asp-for="JenisPembayaran" class="form-control">
                    <option value="SPP">SPP</option>
                    <option value="Uang Gedung">Uang Gedung</option>
                    <option value="Seragam">Seragam</option>
                    <option value="Buku">Buku</option>
                    <option value="Ujian">Ujian</option>
                    <option value="Lainnya">Lainnya</option>
                </select>
                <span asp-validation-for="JenisPembayaran" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jumlah" class="control-label"></label>
                <input asp-for="Jumlah" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TahunAjaranId" class="control-label">Academic Year</label>
                <select asp-for="TahunAjaranId" class="form-control" asp-items="ViewBag.TahunAjaranId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
                    <option value="">-- Select Semester --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TanggalPembayaran" class="control-label">Date</label>
                <input asp-for="TanggalPembayaran" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="TanggalPembayaran" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Belum Lunas">Belum Lunas</option>
            <option value="Lunas">Lunas</option>
            <option value="Menunggu Verifikasi">Menunggu Verifikasi</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BuktiPembayaran" class="control-label">Receipt File Name / URL</label>
        <input asp-for="BuktiPembayaran" class="form-control" />
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update Transaction</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
