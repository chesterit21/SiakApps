@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Profile Information</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@User.Identity.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</dd>
                </dl>
            </div>
        </div>
    </div>
</div>