@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Academic Calendar - SiakApps</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/libs/fontawesome/css/all.css" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        header {
            background-color: #343a40;
            color: white;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .menu {
            list-style: none;
            display: flex;
            gap: 1rem;
            margin: 0;
            padding: 0;
        }
        .menu a {
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .menu a:hover {
            color: #007bff;
        }
        .login a {
            color: white;
            background-color: #007bff;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
        }
        .calendar-hero {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/assets/img/school-calendar.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 6rem 0;
            text-align: center;
        }
        .calendar-hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .calendar-hero p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }
        .calendar-content {
            padding: 3rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        .academic-year {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            margin-bottom: 2rem;
        }
        .year-header {
            background-color: #007bff;
            color: white;
            padding: 1rem;
            font-size: 1.5rem;
        }
        .semester {
            padding: 1.5rem;
            border-bottom: 1px solid #eee;
        }
        .semester:last-child {
            border-bottom: none;
        }
        .semester h3 {
            color: #007bff;
            margin-top: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .events {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1rem;
        }
        .event-card {
            background: #f8f9fa;
            border-left: 4px solid #007bff;
            padding: 1rem;
            border-radius: 4px;
        }
        .event-date {
            font-weight: bold;
            color: #007bff;
        }
        .event-title {
            font-weight: bold;
            margin: 0.5rem 0;
        }
        .download-section {
            text-align: center;
            margin-top: 2rem;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .download-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 0.8rem 2rem;
            font-size: 1.1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }
        .download-btn:hover {
            background-color: #218838;
        }
    @@media (max-width: 768px) {
            .calendar-hero h1 {
                font-size: 2.5rem;
            }
            .events {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header>
        <ul class="menu">
            <li><a href="/Home/Index">Home</a></li>
            <li><a href="/Home/AboutUs">About Us</a></li>
            <li><a href="/Home/News">News</a></li>
            <li><a href="/Home/Admissions">PPDB</a></li>
            <li><a href="/Home/Facilities">Facilities</a></li>
            <li><a href="/Home/Gallery">Gallery</a></li>
            <li><a href="/Home/ContactUs">Contact Us</a></li>
        </ul>
        <div class="login">
            <a href="/Auth/Login">Login</a>
        </div>
    </header>
    <section class="calendar-hero">
        <h1>Academic Calendar 2025/2026</h1>
        <p>Stay informed about important dates, school events, and academic milestones throughout the school year</p>
    </section>
    <div class="calendar-content">
        <div class="academic-year">
            <div class="year-header">School Year 2025/2026</div>
            <div class="semester">
                <h3><i class="fas fa-graduation-cap"></i> Semester 1</h3>
                <div class="events">
                    <div class="event-card">
                        <div class="event-date">July 15 - 19, 2025</div>
                        <div class="event-title">New Student Orientation</div>
                        <p>Welcome session for new students and parents</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">July 21, 2025</div>
                        <div class="event-title">First Day of School</div>
                        <p>Regular classes begin for all students</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">September 16-20, 2025</div>
                        <div class="event-title">Parent-Teacher Conference</div>
                        <p>Schedule meetings with teachers to discuss student progress</p>
                    </div>
                </div>
            </div>
            <div class="semester">
                <h3><i class="fas fa-book-open"></i> Midterm Period</h3>
                <div class="events">
                    <div class="event-card">
                        <div class="event-date">October 27 - November 1, 2025</div>
                        <div class="event-title">Midterm Examinations</div>
                        <p>All students will take midterm exams</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">November 10, 2025</div>
                        <div class="event-title">Midterm Results Released</div>
                        <p>Parents can view results through the portal</p>
                    </div>
                </div>
            </div>
            <div class="semester">
                <h3><i class="fas fa-graduation-cap"></i> Semester 2</h3>
                <div class="events">
                    <div class="event-card">
                        <div class="event-date">January 5, 2026</div>
                        <div class="event-title">Second Semester Begins</div>
                        <p>Classes resume after winter break</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">March 17-21, 2026</div>
                        <div class="event-title">Parent-Teacher Conference</div>
                        <p>Schedule meetings with teachers to discuss student progress</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">May 12-16, 2026</div>
                        <div class="event-title">Final Examinations</div>
                        <p>All students will take final exams</p>
                    </div>
                </div>
            </div>
            <div class="semester">
                <h3><i class="fas fa-gift"></i> School Events</h3>
                <div class="events">
                    <div class="event-card">
                        <div class="event-date">August 17, 2025</div>
                        <div class="event-title">Independence Day Celebration</div>
                        <p>School-wide celebration of Indonesia's Independence Day</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">December 24, 2025</div>
                        <div class="event-title">Christmas Holiday</div>
                        <p>School closed for Christmas holiday</p>
                    </div>
                    <div class="event-card">
                        <div class="event-date">June 15, 2026</div>
                        <div class="event-title">Graduation Ceremony</div>
                        <p>Celebration for graduating students</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="download-section">
            <h2>Download Full Academic Calendar</h2>
            <p>Get the complete academic calendar with all important dates in your preferred format</p>
            <button class="download-btn">
                <i class="fas fa-download"></i> Download PDF Calendar
            </button>
        </div>
    </div>
</body>
</html>