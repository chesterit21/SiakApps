@model SiakWebApps.Models.StudentGrade

<form asp-action="Edit" id="editGradeForm">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SiswaId" class="control-label">Student</label>
        <select asp-for="SiswaId" class="form-control" asp-items="ViewBag.SiswaId"></select>
        <span asp-validation-for="SiswaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UjianId" class="control-label">Exam</label>
        <select asp-for="UjianId" class="form-control" asp-items="ViewBag.UjianId"></select>
        <span asp-validation-for="UjianId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nilai" class="control-label">Grade</label>
        <input asp-for="Nilai" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Nilai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Catatan" class="control-label">Notes</label>
        <textarea asp-for="Catatan" class="form-control"></textarea>
        <span asp-validation-for="Catatan" class="text-danger"></span>
    </div>
    <div class="modal-footer px-0 pb-0 shadow-none border-top-0">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">Update Grade</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
