@model IEnumerable<SiakWebApps.Models.Parent>

@{
    ViewData["Title"] = "Parents";
}

<h1>Parents</h1>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal"
        onclick="showCreateModal()">
        Create New
    </button>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered" id="parentsTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().NamaLengkap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Pekerjaan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().PenghasilanPerBulan)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamaLengkap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pekerjaan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PenghasilanPerBulan)
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="showEditModal(@item.Id)">
                            Edit
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-info" onclick="showDetailsModal(@item.Id)">
                            Details
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteParent(@item.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create Parent</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Parent</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Parent Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Content will be loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#parentsTable').DataTable({
                "pageLength": 10,
                "ordering": true,
                "info": true,
                "responsive": true,
                "dom": 'Bfrtip',
                "buttons": ['copy', 'csv', 'excel', 'pdf', 'print']
            });
        });

        function showCreateModal() {
            $.get('/Parents/Create', function (data) {
                $('#createModal .modal-body').html(data);
                $('#createModal').modal('show');
            });
        }

        function showEditModal(id) {
            $.get('/Parents/Edit/' + id, function (data) {
                $('#editModal .modal-body').html(data);
                $('#editModal').modal('show');
            });
        }

        function showDetailsModal(id) {
            $.get('/Parents/Details/' + id, function (data) {
                $('#detailsModal .modal-body').html(data);
                $('#detailsModal').modal('show');
            });
        }

        function deleteParent(id) {
            if (confirm('Are you sure you want to delete this parent?')) {
                $.post('/Parents/Delete', { id: id }, function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting parent: ' + data.message);
                    }
                });
            }
        }

        // Handle form submissions
        $(document).on('submit', '#createParentForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#createModal').modal('hide');
                        location.reload();
                    } else {
                        // Display validation errors
                        alert('Validation errors occurred.');
                    }
                }
            });
        });

        $(document).on('submit', '#editParentForm', function (e) {
            e.preventDefault();
            var form = $(this);
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#editModal').modal('hide');
                        location.reload();
                    } else {
                        // Display validation errors
                        alert('Validation errors occurred.');
                    }
                }
            });
        });
    </script>
}