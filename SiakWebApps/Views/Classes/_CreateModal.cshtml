@model SiakWebApps.Models.Class

<form asp-action="Create" id="createClassForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tingkat" class="control-label"></label>
        <input asp-for="Tingkat" class="form-control" />
        <span asp-validation-for="Tingkat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TahunAjaranId" class="control-label"></label>
        <input asp-for="TahunAjaranId" class="form-control" />
        <span asp-validation-for="TahunAjaranId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WaliKelasId" class="control-label"></label>
        <input asp-for="WaliKelasId" class="form-control" />
        <span asp-validation-for="WaliKelasId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kapasitas" class="control-label"></label>
        <input asp-for="Kapasitas" class="form-control" />
        <span asp-validation-for="Kapasitas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}